<%= form_for @changeset, @action, [as: :user], fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p><%= gettext("Oops, something went wrong! Please check the errors below.")%></p>
    </div>
  <% end %>
  <br>
  <div class="container">
    <div class="columns is-centered">
      <article class="card column is-half is-rounded">
        <div class="card-content">
          <h1 class="title">   
            Ingresar
          </h1>
          <br>
          <p class="control has-icon">
            <%= text_input f, Pow.Ecto.Schema.user_id_field(@changeset), placeholder: "Email", class: "input", type: "email"%>
            <i class="fa fa-envelope"></i>
            <%= error_tag f, Pow.Ecto.Schema.user_id_field(@changeset) %>
          </p>
          <br>
          <p class="control has-icon">
            <%= password_input f, :password, placeholder: "Password", class: "input", type: "password" %>
            <i class="fa fa-lock"></i>
          </p>
          <br>
          <p class="control">
            <label class="checkbox">
              <input type="checkbox">
              Recordarme
            </label>
          </p>
          <br>
          <p class="control">
            <%= submit "Ingresar", class: "button is-primary is-medium is-fullwidth" %>
            <i class="fa fa-user"></i>
          </p>
          <br>
          <p>Si no tienes una cuenta, registrate  <span><%= link "aquÃ­", to: Routes.pow_registration_path(@conn, :new) %></span></p>
        </div>
      </article>
    </div>
  </div>
<% end %>
